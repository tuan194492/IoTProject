<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iotproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IotProject">
        <activity
            android:name=".view.DeviceInfoView"
            android:exported="false" />
        <activity
            android:name=".view.ChangePasswordView"
            android:exported="false" />
        <activity
            android:name=".view.UpdateUserInfoView"
            android:exported="false" />
        <activity
            android:name=".view.AddDeviceDialog"
            android:exported="false" />
        <activity
            android:name=".view.MainView"
            android:exported="false" />
        <activity
            android:name=".view.RegisterView"
            android:exported="false" />
        <activity
            android:name=".view.LoginView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>